---
import { Navbar } from "@/components/ui";
import "@/styles/globals.scss";

interface Props {
  title?: string;
  description?: string;
}

const { title = "Astro React Startup", description = "Astro + React 應用程式" } = Astro.props;
---

<!doctype html>
<html lang="zh-TW">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar client:load />
    <main>
      <slot />
    </main>
  </body>
</html>
